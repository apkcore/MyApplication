<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="main_backcolor" format="color" />
    <declare-styleable name="TabContainer">
        <attr name="underlineheight" format="dimension" />
        <attr name="underlinecolor" format="color" />
        <attr name="indicatorheight" format="dimension" />
        <attr name="indicatorcolor" format="color" />
        <attr name="textcolor" format="color" />
        <attr name="textsize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="RotateLayout">
        <!-- Child view of this layout will be rotated by this angle. -->
        <!-- If angle is not multiple of 90 it will be reduced to the multiple of 90. -->
        <!-- For example 89 will be reduced to 0, 91 will be reduced to 90. -->
        <attr name="angle" format="integer" />
    </declare-styleable>

</resources>
